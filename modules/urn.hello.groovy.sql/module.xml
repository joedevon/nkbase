<?xml version="1.0" encoding="UTF-8"?>
<module version="2.0">
   <meta>
      <identity>
         <uri>urn:hello:groovy:sql</uri>
         <version>1.0.0</version>
      </identity>
      <info>
         <name>Hello World SQL with Groovy</name>
         <description>Make sure you can connect with MySQL and do a Query</description>
         <icon>res:/hello_groovy_sql/pub/icon.png</icon>
      </info>
   </meta>
   <system>
      <dynamic/>
   </system>
   <rootspace name="Hello World SQL with Groovy - Development Space" uri="urn:hello:groovy:sql">
      <fileset>
         <regex>res:/etc/system/SimpleDynamicImportHook.xml</regex>
      </fileset>
      <mapper>
         <config>
            <endpoint>
               <id>urn:hello:groovy:sql:ExampleEndpoint</id>
               <name>Example Service</name>
               <description>Example Groovy service generated by New Module Wizard</description>
               <grammar>res:
                  <group name="service">/hello_groovy_sql/service</group>/
                  <group name="value">
                     <regex type="anything"/>
                  </group>
               </grammar>
               <request>
                  <identifier>active:groovy</identifier>
                  <argument name="operator">res:/resources/endpoints/example.gy</argument>
                  <argument method="as-string" name="value">arg:value</argument>
               </request>
            </endpoint>
         </config>
         <space>
            <fileset>
               <regex>res:/resources/endpoints/.*</regex>
            </fileset>
			<fileset>
			       <regex>res:/etc/ConfigRDBMS.xml</regex>
			</fileset>
			<import>
				<uri>urn:org:netkernel:mod:db</uri>
			</import>

            <import>
               <uri>urn:org:netkernel:lang:groovy</uri>
            </import>
            <import><!-- import Freemarker module (used by example) -->
               <uri>urn:org:netkernel:lang:freemarker</uri>
            </import>
         </space>
      </mapper>
      <fileset><!--Icon-->
         <regex>res:/hello_groovy_sql/pub/(.*)</regex>
         <rewrite>res:/resources/pub/$1</rewrite>
      </fileset>
   </rootspace>
</module>